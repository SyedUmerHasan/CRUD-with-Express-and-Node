extends layout
block content
    h1 #{title}
    .container
        .row
            .col-md-12
                a.float-right.btn.btn-primary(href="/addArticles", value="Add Blog", style="margin:20px;") Add Blog

    each item , index in articles
        ul.list-group
            li.list-group-item
                .container
                    .row
                        .col-md-10.col-sm-8.col-xs-8
                            a(href="/article/"+item._id)= item.title
                        .col-md-1.col-sm-2.col-xs-2
                            a(href="/article/edit/" + item._id, class="btn btn-primary pull-right") Edit
                        .col-md-1.col-sm-2.col-xs-2
                            a(href="/article/delete/" + item._id, class="btn btn-danger pull-right") Delete
